# Ilowa App — Environment Variables
# Copy this to .env and fill in your keys

# Solana RPC (Helius recommended for production)
EXPO_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Voice transcription — https://app.gladia.io
EXPO_PUBLIC_GLADIA_API_KEY=

# Multilingual AI — https://dashboard.cohere.com/api-keys
EXPO_PUBLIC_COHERE_API_KEY=

# Reasoning engine (pick one or both)
# https://deepinfra.com — or — https://api.together.xyz
EXPO_PUBLIC_DEEPINFRA_API_KEY=
EXPO_PUBLIC_TOGETHER_API_KEY=

# African language TTS — https://lelapa.ai
EXPO_PUBLIC_LELAPA_API_KEY=
EXPO_PUBLIC_LELAPA_URL=https://api.lelapa.ai/v1

# Live radio streaming — https://livepeer.studio
EXPO_PUBLIC_LIVEPEER_API_KEY=

# IPFS audio uploads — https://app.pinata.cloud/keys
EXPO_PUBLIC_PINATA_API_KEY=
EXPO_PUBLIC_PINATA_SECRET_KEY=

# Privacy encryption — https://arcium.com
EXPO_PUBLIC_ARCIUM_URL=https://api.arcium.com/v1
EXPO_PUBLIC_ARCIUM_NETWORK=devnet

# Backend API (optional, for VPS deployment)
EXPO_PUBLIC_API_URL=

# Federated learning server (optional)
EXPO_PUBLIC_FL_SERVER_URL=
